<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:id="@+id/dashboardcard"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
    <ImageView
        android:id="@+id/bookimage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/foodlogo"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_toEndOf="@+id/bookimage"
        android:id="@+id/bookname"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_toEndOf="@+id/bookimage"
        android:layout_below="@+id/bookname"
        android:textColor="#7E000000"
        android:layout_margin="5dp"
        android:id="@+id/bookauthorname"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/bookprice"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/bookimage"
        android:padding="8dp"
        android:layout_below="@id/bookauthorname"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookauthorname"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/bookrating"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#fcc031"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:drawableEnd="@drawable/ic_star_black_24dp"
        android:drawablePadding="4dp"
        />
    </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>